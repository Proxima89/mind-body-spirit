<div class="container">
    <div class="col">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary"><%= @affiliate.category.category %></strong>                   
                <h3> <%= @affiliate.title  %> </h3>
                <div class="mb-1 text-muted">
                 
                </div>
                <p> <%= @affiliate.body %> </p> 
            </div>                                
            <div class="col-auto d-none d-lg-block">
                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            </div>
           
        </div>
    </div>    
    <div class="text-center">    
    <% if current_user && current_user.admin %>
        <%= link_to "Edit", edit_affiliate_path(@affiliate), :class => 'btn btn-primary' %>
        <%= link_to "Delete", affiliate_path(@affiliate),method: :delete,
        data: {confirm: 'Are you sure?'},
        :class => 'btn btn-danger' %>
    <% end %>
    <button onclick="goBack()" class="btn btn-secondary">Go Back</button>
    </div>
    <div class="container mt-0 justify-content-center col-md-8">
            <%= render 'comments/comments' %>          
    </div>
    <div class="container mt-0 col-md-6">
        <%= render 'comments/form' %>
    </div>
    <div class="text-center">
    <hr>
        <%= link_to "See All Products", affiliates_path, :class => 'btn btn-default' %>                   
        
    </div>
</div>

<script>
const goBack = () => {
  onclick = window.history.back();
  }
</script>